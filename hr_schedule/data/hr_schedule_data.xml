<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <record id="wd_mon" model="hr.schedule.weekday">
            <field name="name">Monday</field>
            <field name="sequence" eval="0"/>
        </record>
        <record id="wd_tue" model="hr.schedule.weekday">
            <field name="name">Tuesday</field>
            <field name="sequence" eval="1"/>
        </record>
        <record id="wd_wed" model="hr.schedule.weekday">
            <field name="name">Wednesday</field>
            <field name="sequence" eval="2"/>
        </record>
        <record id="wd_thu" model="hr.schedule.weekday">
            <field name="name">Thursday</field>
            <field name="sequence" eval="3"/>
        </record>
        <record id="wd_fri" model="hr.schedule.weekday">
            <field name="name">Friday</field>
            <field name="sequence" eval="4"/>
        </record>
        <record id="wd_sat" model="hr.schedule.weekday">
            <field name="name">Saturday</field>
            <field name="sequence" eval="5"/>
        </record>
        <record id="wd_sun" model="hr.schedule.weekday">
            <field name="name">Sunday</field>
            <field name="sequence" eval="6"/>
        </record>
    </data>
    <data>
        <!-- Alert-related subtypes for messaging / Chatter -->
        <record id="mt_alert_resolved" model="mail.message.subtype">
            <field name="name">Resolved</field>
            <field name="res_model">hr.schedule.alert</field>
            <field name="description">Alert resolved</field>
        </record>
        <record id="mt_alert_unresolved" model="mail.message.subtype">
            <field name="name">Unresolved</field>
            <field name="res_model">hr.schedule.alert</field>
            <field name="description">Alert state is unresolved</field>
        </record>
    </data>
</openerp>