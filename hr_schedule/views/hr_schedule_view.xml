<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!-- Top-level Menu -->
        <menuitem name="Schedules" id="menu_time_attendance" groups="hr.group_hr_user" sequence="1"/>
        <!-- Scheduling submenu -->
        <menuitem name="Scheduling" id="menu_hr_root_schedule" parent="menu_time_attendance" groups="hr.group_hr_user" sequence="20"/>
        <!-- Scheduling configuration -->
        <menuitem id="menu_hr_configure_schedule" parent="hr.menu_human_resources_configuration" name="Scheduling" groups="hr.group_hr_manager" sequence="45"/>
        <!-- Schedules -->
        <record id="view_hr_schedule_filter" model="ir.ui.view">
            <field name="name">view_hr_schedule_filter</field>
            <field name="model">hr.schedule</field>
            <field name="arch" type="xml">
                <search string="Work Week Schedule Search">
                    <field name="name" string="Week Schedule"/>
                    <field name="date_start"/>
                    <filter icon="terp-go-today" string="Today" name="today" domain="[('date_start','&gt;=',current_date),('date_start','&lt;=',current_date)]" />
                    <separator/>
                    <filter icon="terp-stock_align_left_24" string="My Schedule" domain="[('employee_id.user_id.id', '=', uid)]" />
                    <field name="employee_id"/>
                    <field name="department_id"/>
                    <group expand="0" string="Group By...">
                        <filter name="department" string="Department" icon="terp-personal" domain="[]" context="{'group_by':'department_id'}"/>
                        <filter name="employee" string="Employee" icon="terp-personal" domain="[]" context="{'group_by':'employee_id'}"/>
                        <filter string="Day" icon="terp-go-today" domain="[]" context="{'group_by':'date_start'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_hr_schedule_tree" model="ir.ui.view">
            <field name="name">hr.schedule.tree</field>
            <field name="model">hr.schedule</field>
            <field name="arch" type="xml">
                <tree string="Schedules">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="department_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_schedule_form" model="ir.ui.view">
            <field name="name">hr.schedule.form</field>
            <field name="model">hr.schedule</field>
            <field name="arch" type="xml">
                <form string="Employee Schedule" version="7.0">
                    <header>
                        <button name="workflow_validate" type="object" states="draft" class="oe_highlight" string="Validate"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="employee_id" on_change="onchange_employee_start_date(employee_id, date_start)"/>
                            <field name="template_id"/>
                            <label for="date_start" string="Duration"/>
                            <div>
                                <field name="date_start" class="oe_inline" on_change="onchange_employee_start_date(employee_id, date_start)"/> to                                                                
                                <field name="date_end" class="oe_inline"/>
                            </div>
                            <field name="name"/>
                            <field name="department_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <notebook>
                            <page string="Working Days">
                                <field name="detail_ids">
                                    <tree string="Schedule Detail" editable="top">
                                        <field name="name"/>
                                        <field name="dayofweek"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Rest Days">
                                <group>
                                    <group>
                                        <field name="restday_ids1" widget="many2many_tags"/>
                                        <field name="restday_ids2" widget="many2many_tags"/>
                                        <field name="restday_ids3" widget="many2many_tags"/>
                                        <field name="restday_ids4" widget="many2many_tags"/>
                                        <field name="restday_ids5" widget="many2many_tags"/>
                                    </group>
                                    <group></group>
                                </group>
                            </page>
                            <page string="Alerts">
                                <group string="Alerts" colspan="4" cols="5">
                                    <field name="alert_ids" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="open_schedule_view" model="ir.actions.act_window">
            <field name="name">Employee Schedules</field>
            <field name="res_model">hr.schedule</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_schedule_filter" />
        </record>
        <menuitem action="open_schedule_view" id="menu_schedule_view" parent="menu_hr_root_schedule" sequence="10"/>
        <!-- Employment Contracts -->
        <record id="view_hr_contract_form_inherit" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit.schedule</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='resource_calendar_id']" position="replace">
                        <!-- hr_payroll requires this so we can't just replace it. -->
                        <field name="resource_calendar_id" invisible="1"/>
                        <field name="schedule_template_id"/>
                    </xpath>
                </data>
            </field>
        </record>
        <!-- Attendance -->
        <record id="view_hr_attendance_form" model="ir.ui.view">
            <field name="name">hr.attendance.form.inherit.schedule</field>
            <field name="model">hr.attendance</field>
            <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='check_out']" position="after">
                    <group string="Alerts" colspan="4" cols="5">
                        <field name="alert_ids" nolabel="1"/>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- Employee Schedule -->
        <record id="act_hr_employee_2_hr_schedule" model="ir.actions.act_window">
            <field name="res_model">hr.schedule</field>
            <field name="view_type">form</field>
            <field name="name">Schedule</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_employee_id': [active_id], 'default_employee_id': active_id}</field>
        </record>
        <record id="hr_employee_view_form" model="ir.ui.view">
            <field name="name">hr.employee.view.inherit.schedule</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button name="%(act_hr_employee_2_hr_schedule)d" string="Schedule" type="action" icon="fa-calendar" groups="hr.group_hr_user" />
                    </xpath>
                </data>
            </field>
        </record>
        <!-- Initial Contract Settings -->
        <record id="view_contract_init_tree" model="ir.ui.view">
            <field name="name">hr.contract.init.tree.schedule</field>
            <field name="model">hr.contract.init</field>
            <field name="inherit_id" ref="hr_contract_init.view_contract_init_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name="sched_template_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_contract_init_form" model="ir.ui.view">
            <field name="name">hr.contract.init.form.schedule</field>
            <field name="model">hr.contract.init</field>
            <field name="inherit_id" ref="hr_contract_init.view_contract_init_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='struct_id']" position="after">
                    <field name="sched_template_id"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>